#!/bin/bash
# æ–‡ä»¶/ç›®å½•åˆ é™¤ï¼ˆdialog è§¦å±ç‰ˆï¼‰ï¼Œä¾èµ– yz
[ -f /xrk/shell_modules/menu_common.sh ] && source /xrk/shell_modules/menu_common.sh
menu_init 0 0  # åˆå§‹åŒ–ï¼šä¸éœ€è¦commonï¼Œä¸éœ€è¦check_changes

# è®¾ç½® dialog é¢œè‰²
export DIALOGRC="/dev/null"
export DIALOG_OK=0
export DIALOG_CANCEL=1
export DIALOG_ESC=255

# ä¸´æ—¶æ–‡ä»¶
temp_file=$(mktemp)
trap 'rm -f $temp_file' EXIT

# æ˜¾ç¤ºæ–‡ä»¶é€‰æ‹©èœå•
function show_file_menu() {
    local want_path=$1
    local title=$2
    
    # æ£€æŸ¥ç›®å½•æ˜¯å¦å­˜åœ¨
    if [ ! -d "$want_path" ]; then
        dialog --title "é”™è¯¯" --msgbox "ç›®å½• $want_path ä¸å­˜åœ¨" 8 40
        return 1
    fi
    
    # è·å–æ–‡ä»¶åˆ—è¡¨
    local files=($(find "$want_path" -mindepth 1 -maxdepth 1 -printf "%f\n" 2>/dev/null))
    
    # æ£€æŸ¥ç›®å½•æ˜¯å¦ä¸ºç©º
    if [ ${#files[@]} -eq 0 ]; then
        dialog --title "æç¤º" --msgbox "å½“å‰ç›®å½•ä¸ºç©º" 8 40
        return 1
    fi
    
    local dialog_options=()
    for i in "${!files[@]}"; do
        if [ -d "$want_path/${files[i]}" ]; then
            dialog_options+=("${files[i]}" "ğŸ“ æ–‡ä»¶å¤¹" "off")
        else
            dialog_options+=("${files[i]}" "ğŸ“„ æ–‡ä»¶" "off")
        fi
    done
    
    # æ˜¾ç¤ºæ–‡ä»¶é€‰æ‹©å¯¹è¯æ¡†
    dialog --title "$title" \
           --checklist "ä½¿ç”¨ç©ºæ ¼é”®é€‰æ‹©è¦åˆ é™¤çš„æ–‡ä»¶/æ–‡ä»¶å¤¹" \
           20 70 15 \
           "${dialog_options[@]}" \
           2>$temp_file
    
    # æ£€æŸ¥ç”¨æˆ·é€‰æ‹©
    if [ $? -eq 0 ]; then
        local selected_files=($(cat $temp_file))
        
        if [ ${#selected_files[@]} -gt 0 ]; then
            # ç¡®è®¤åˆ é™¤
            local files_list=""
            for file in "${selected_files[@]}"; do
                files_list="$files_list\n$file"
            done
            
            dialog --title "ç¡®è®¤åˆ é™¤" \
                   --yesno "ç¡®å®šè¦åˆ é™¤ä»¥ä¸‹æ–‡ä»¶/æ–‡ä»¶å¤¹å—ï¼Ÿ$files_list" \
                   15 60
            
            if [ $? -eq 0 ]; then
                # æ‰§è¡Œåˆ é™¤
                local deleted=0
                local failed=0
                local error_msg=""
                
                for file in "${selected_files[@]}"; do
                    if rm -rf "$want_path/$file" 2>/dev/null; then
                        ((deleted++))
                    else
                        ((failed++))
                        error_msg="$error_msg\n$file"
                    fi
                done
                
                # æ˜¾ç¤ºç»“æœ
                local result_msg="æˆåŠŸåˆ é™¤ $deleted ä¸ªæ–‡ä»¶/æ–‡ä»¶å¤¹"
                [ $failed -gt 0 ] && result_msg="$result_msg\nåˆ é™¤å¤±è´¥ $failed ä¸ªï¼š$error_msg"
                
                dialog --title "åˆ é™¤ç»“æœ" --msgbox "$result_msg" 15 60
            fi
        fi
    fi
}

# ä¸»èœå•å‡½æ•°
function main_menu() {
    while true; do
        dialog --title "æ–‡ä»¶ç®¡ç†å™¨" \
               --menu "é€‰æ‹©è¦ç®¡ç†çš„ç›®å½•" \
               15 60 4 \
               1 "æ’ä»¶åŒ…ç›®å½•" \
               2 "jsæ’ä»¶ç›®å½•" \
               3 "Botç›®å½•" \
               4 "è‡ªå®šä¹‰ç›®å½•ç®¡ç†" \
               2>$temp_file
        
        local choice=$(cat $temp_file)
        case $choice in
            1) show_file_menu "$yz/plugins" "æ’ä»¶åŒ…ç›®å½•" ;;
            2) show_file_menu "$yz/plugins/example" "jsæ’ä»¶ç›®å½•" ;;
            3) show_file_menu "$yz" "Botç›®å½•" ;;
            4)
                dialog --title "è‡ªå®šä¹‰ç›®å½•" \
                       --inputbox "è¾“å…¥è¦ç®¡ç†çš„ç›®å½•è·¯å¾„ï¼š" \
                       8 60 \
                       2>$temp_file
                
                if [ $? -eq 0 ]; then
                    local custom_path=$(cat $temp_file)
                    show_file_menu "$custom_path" "è‡ªå®šä¹‰ç›®å½•"
                fi
                ;;
            *) exit 0 ;;
        esac
    done
}

# å¯åŠ¨ä¸»ç¨‹åº
main_menu