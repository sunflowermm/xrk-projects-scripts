#!/bin/bash
# 独立模块：安装 ffmpeg（支持远程/本地执行，供环境与模块调用）

command -v ffmpeg &>/dev/null && { echo "[ffmpeg] 已安装: $(ffmpeg -version | head -1)"; exit 0; }

# 加载 run_software（如果可用）
SCRIPT_RAW_BASE="${SCRIPT_RAW_BASE:-https://raw.gitcode.com/Xrkseek/xrk-projects-scripts/raw/master}"
if [ -f /xrk/shell_modules/menu_common.sh ]; then
    source /xrk/shell_modules/menu_common.sh
elif [ -f /xrk/shell_modules/repo_source.sh ]; then
    source /xrk/shell_modules/repo_source.sh
fi

# 使用 run_software 或直接执行（支持远程/本地）
if type run_software &>/dev/null; then
    run_software "project-install/software/ffmpeg"
else
    if [ -f /xrk/project-install/software/ffmpeg ]; then
        bash /xrk/project-install/software/ffmpeg
    else
        bash <(curl -sL "${SCRIPT_RAW_BASE}/project-install/software/ffmpeg")
    fi
fi
echo "[ffmpeg] 安装完成"
