# 主题：默认 .theme，有 system.yaml 且 yq 可用则读取，仅当主题文件存在时 source
root="${XRK_ROOT:-/xrk}"
theme=".theme"
[ -f "$root/system.yaml" ] && command -v yq &>/dev/null && theme=$(yq -r '.color // ".theme"' "$root/system.yaml" 2>/dev/null)
export theme="${theme:-.theme}"
[ -f "$root/body/theme/${theme}" ] && source "$root/body/theme/${theme}"